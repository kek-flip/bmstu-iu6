program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var k : integer; r, s, eps : real;

begin
  write('Введите точность: '); readln(eps);
  k := 0;
  s := 0;
  repeat
    k := k + 1;
    if ((k - 1) mod 2 = 0) then r := 1 / k
    else r := -1 / k;
    s := s + r;
  until (abs(s - ln(2)) < eps);
  writeln('Сумма с заданной точностью равна ', s:16:16);
  writeln('Количество итераций равно ', k);
  readln;
end.

//количество итераций обратно пропорционально точности

{Введите точность: 0.01
Сумма с заданной точностью равна 0.6832471605759183
Количество итераций равно 50

Введите точность: 0.0001
Сумма с заданной точностью равна 0.6930471905599515
Количество итераций равно 5000}
