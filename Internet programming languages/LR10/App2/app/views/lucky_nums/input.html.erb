<% flash.each do |_, msg| %>
    <h1 id="error"><%= msg %></h1>
<% end %>
<%= form_with url: lucky_nums_path, method: :get do |form| %>
    <%= form.label :num, 'Введите верхнюю границу проверки чисел (> 0):' %>
    <%= form.text_field :num %>
    <br>
    <br>
    <input type="radio" id="side" name="side" value="server" checked/>
    <%= form.label :side, 'Выполнить преобразование на сервере' %>
    <br>
    <%= form.radio_button :side, 'client' %>
    <%= form.label :side, 'Выполнить преобразование в браузере' %>
    <br>
    <br>
    <%= form.submit 'Проверить' %>
<% end %>
